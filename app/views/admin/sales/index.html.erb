<section class="admin-Sales-index">

  <header class="page-header">
    <h1>Admin &raquo; All Sales</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Sales', [:new, :admin, :sale], class: 'btn btn-info' %>
  </div>
  <br>
  <div class="panel panel-default Sales">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="1">Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Status</th>
          <th>Percent off</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%#= render @sales %>
        <% @sales.each do |s| %>
          <%= render 'sale', sale: s%>
        <% end %>
      </tbody>
    </table>

  </div>

</section>